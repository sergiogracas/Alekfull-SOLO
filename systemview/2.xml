<theme>
<formatVersion>4</formatVersion>


<view name="system">
      <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>-0.05 -0.1</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoScale>2.2</logoScale>
		<logoSize>0.2 0.2</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>3</maxLogoCount>
		<defaultTransition>instant</defaultTransition>			
      </carousel>

      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
      </image>	  
	  
	<image name="logo">
		<path>./../assets/logos/$system.png</path>
	</image>
	  
   <text name="systemInfo">
         <pos>-0.052 0.868</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <alignment>right</alignment>
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.023</fontSize>
   </text>
	  
   <image name="bar" extra="true">
         <origin>0 0</origin>
         <pos>0.565 0.929</pos>
         <size>0 0</size>
         <path>./../assets/bar.jpg</path>
		 <zIndex>42</zIndex>
   </image> 

   
   <helpsystem name="help">
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.019</fontSize>     
         <pos>0.566 0.942</pos>      
         <textColor>FFFFFF</textColor>
   </helpsystem>
</view>
</theme>